{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useDateNow": "error"
            },
            "correctness": {
                "useValidForDirection": "error"
            },
            "style": { "noNonNullAssertion": "off" }
        }
    }
}
